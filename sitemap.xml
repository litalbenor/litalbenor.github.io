---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% for page in site.pages %}
    {% if page.url contains '.html' or page.url == '/' or page.url contains '/en/' or page.url contains '/he/' %}
      {% unless page.url contains 'sitemap' or page.url contains '404' %}
      <url>
        <loc>{{ site.url }}{{ page.url | remove: 'index.html' }}</loc>
        <lastmod>{{ site.time | date: '%Y-%m-%d' }}</lastmod>
        {% if page.lang == 'en' %}
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en{{ page.url | remove: '/en' | remove: 'index.html' }}" />
        <xhtml:link rel="alternate" hreflang="he" href="{{ site.url }}/he{{ page.url | remove: '/en' | remove: 'index.html' }}" />
        {% elsif page.lang == 'he' %}
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en{{ page.url | remove: '/he' | remove: 'index.html' }}" />
        <xhtml:link rel="alternate" hreflang="he" href="{{ site.url }}/he{{ page.url | remove: '/he' | remove: 'index.html' }}" />
        {% endif %}
        <changefreq>monthly</changefreq>
        <priority>{% if page.url == '/en/' or page.url == '/he/' %}1.0{% else %}0.8{% endif %}</priority>
      </url>
      {% endunless %}
    {% endif %}
  {% endfor %}
</urlset>

